$("ul.errors").html("")
<% if @degree.errors.any? %>
    <% @degree.errors.full_messages.each do |message| %>
        $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
    <% end %>
<% else %>
    $(".degree-index").html("<%= escape_javascript(render 'index') %>")
    $("#degree-modal").modal("hide")
<% end %>