<div class="modal-dialog">
  <div class="modal-content">

    <div class="color-line"></div>

    <div class="modal-header text-center">
      <h4 class="modal-title">Modal title</h4>
      <small class="font-bold">Lorem Ipsum is simply dummy text of the printing and typesetting industry.</small>
    </div>

    <%= form_for @certificate, remote: true, html: { style: "display:inline;" } do |f| %>

        <div class="modal-body">
          <ul class="errors"></ul>

          <div class="form-group">
            <%= f.label "Işgär : ", class: "col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8"><%= f.collection_select(:employee_id, @employees, :id, :first_and_last_name, :include_blank => t("Please_select"), :class => "form-control" ) %></div>
          </div>

          <br><br><br>

          <div class="form-group">
            <%= f.label "Görnüşi : ", class: "col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8"><%= f.collection_select(:certificate_type_id, @certificate_types, :id, :certificate_type_title, :include_blank => t("Please_select"), :class => "form-control" ) %></div>
          </div>

          <br><br><br>

          <div class="form-group">
            <%= f.label "Guramanyň Ady: ", class:"col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8"><%= f.text_field :issued_by, :type => "text", class: "form-control" %></div>
          </div>

          <br><br><br>

          <div class="form-group">
            <%= f.label "Sertifikat Maglumaty : ", class:"col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8"><%= f.text_field :certificate_title, :type => "text", class: "form-control" %></div>
          </div>

          <br><br><br>

          <div class="form-group">
            <%= f.label "Sertifikat Belgisi : ", class:"col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8"><%= f.text_field :certificate_no, :type => "text", class: "form-control" %></div>
          </div>

          <br><br><br>

          <div class="form-group">
            <%= f.label "Berlen Senesi: ", class:"col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8"><%= f.date_select :issued_date, :start_year => 1900, :end_year => 2018, :type => "text", class: "form-control" %></div>
          </div>

          <br><br><br>

          <div class="form-group">
            <%= f.label "Güýji Gutarýan Senesi: ", class:"col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8"><%= f.date_select :expiry_date, :start_year => 1900, :end_year => 2018, :type => "text", class: "form-control" %></div>
          </div>

          <br><br><br>

          <div class="form-group">
            <%= f.label "Bellikler : ", class: "col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8"><%= f.text_area :notes, :type => "text",class: "form-control" %></div>
          </div>

          <br><br><br>

        </div>

        <div class="modal-footer">
          <%= f.submit "Kabul Et", class: "btn btn-primary" %>
          <%= link_to "Goýbolsun", "#", class: "btn btn-default", data: {dismiss: "modal"} %>
        </div>

    <% end %>

  </div>
</div>
