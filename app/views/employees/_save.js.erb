$("ul.errors").html("")
<% if @employee.errors.any? %>
    <% @employee.errors.full_messages.each do |message| %>
        $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
    <% end %>
<% else %>
    $(".employee-index").html("<%= escape_javascript(render 'index') %>")
    $("#employee-modal").modal("hide")
<% end %>
