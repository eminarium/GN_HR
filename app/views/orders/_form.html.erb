<div class="modal-dialog">
  <div class="modal-content">

    <div class="color-line"></div>

    <div class="modal-header text-center">
      <h4 class="modal-title">Modal title</h4>
      <small class="font-bold">Lorem Ipsum is simply dummy text of the printing and typesetting industry.</small>
    </div>

    <%= form_for @order, remote: true, html: { style: "display:inline;" } do |f| %>

    <div class="modal-body">
        <ul class="errors"></ul>

        <div class="form-group">
            <%= f.label "Buýruk #: ", class:"col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8"><%= f.text_field :order_no, :type => "text", class: "form-control" %></div>
        </div>

        <br><br><br>

      <div class="form-group">
        <%= f.label "Senesi: ", class:"col-sm-4 control-label", style: "text-align:right" %>
        <div class="col-sm-8"><%= f.date_select :order_date, :start_year => 1900, :end_year => 2018, :type => "text", class: "form-control" %></div>
      </div>

      <br><br><br>

      <div class="form-group">
          <%= f.label "Mowzugy : ", class:"col-sm-4 control-label", style: "text-align:right" %>
          <div class="col-sm-8"><%= f.text_field :order_title, :type => "text", class: "form-control" %></div>
      </div>

      <br><br><br>

      <div class="form-group">
          <%= f.label "Prefix : ", class:"col-sm-4 control-label", style: "text-align:right" %>
          <div class="col-sm-8"><%= f.text_field :prefix, :type => "text", class: "form-control" %></div>
      </div>

      <br><br><br>

      <div class="form-group">
          <%= f.label "Postfix: ", class:"col-sm-4 control-label", style: "text-align:right" %>
          <div class="col-sm-8"><%= f.text_field :postfix, :type => "text", class: "form-control" %></div>
      </div>

      <br><br><br>

      <div class="form-group">
          <%= f.label "Skanirleneni : ", class:"col-sm-4 control-label", style: "text-align:right" %>
          <div class="col-sm-8"><%= f.text_field :order_scan_path, :type => "text", class: "form-control" %></div>
      </div>

      <br><br><br>

        <div class="form-group">
            <%#= f.label :notes, class: "control-label" %>
            <%= f.label "Bellikler : ", class: "col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8"><%= f.text_area :notes, :type => "text",class: "form-control" %></div>
        </div>

        <br><br><br>

    </div>

    <div class="modal-footer">
        <%= f.submit "Kabul Et", class: "btn btn-primary" %>
        <%= link_to "Goýbolsun", "#", class: "btn btn-default", data: {dismiss: "modal"} %>
    </div>

    <% end %>

    </div>
</div>
