$("ul.errors").html("")
<% if @unpaid_offday.errors.any? %>
    <% @unpaid_offday.errors.full_messages.each do |message| %>
        $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
    <% end %>
<% else %>
    $(".unpaid_offday-index").html("<%= escape_javascript(render 'index') %>")
    $("#unpaid_offday-modal").modal("hide")
<% end %>
