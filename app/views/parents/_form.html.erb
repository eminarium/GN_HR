<div class="modal-dialog">
  <div class="modal-content">

    <div class="color-line"></div>

    <div class="modal-header text-center">
      <h4 class="modal-title">Modal title</h4>
      <small class="font-bold">Lorem Ipsum is simply dummy text of the printing and typesetting industry.</small>
    </div>

    <%= form_for @parent, remote: true, html: { style: "display:inline;" } do |f| %>

        <div class="modal-body">
          <ul class="errors"></ul>

          <div class="form-group">
            <%= f.label "Ady : ", class:"col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8"><%= f.text_field :first_name, :type => "text", class: "form-control" %></div>
          </div>

          <br><br><br>

          <div class="form-group">
            <%= f.label "Familiýasy : ", class:"col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8"><%= f.text_field :last_name, :type => "text", class: "form-control" %></div>
          </div>

          <br><br><br>

          <div class="form-group">
            <%= f.label "Atasynyň Ady : ", class:"col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8"><%= f.text_field :patronymic, :type => "text", class: "form-control" %></div>
          </div>

          <br><br><br>

          <div class="form-group">
            <%= f.label "Doglan Senesi: ", class:"col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8"><%= f.date_select :dob, :start_year => 1900, :end_year => 2018, :type => "text", class: "form-control" %></div>
          </div>

          <br><br>

          <div class="form-group">
            <%= f.label "Erkek/Zenan: ", class:"col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8"><%= f.check_box :gender, class: "form-control" %></div>
          </div>

          <br><br>


          <div class="form-group">
            <%= f.label "Işgär : ", class: "col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8"><%= f.collection_select(:employee_id, @employees, :id, :first_name, :include_blank => t("Please_select"), :class => "form-control" ) %></div>
          </div>

          <br><br><br>

          <div class="form-group">
            <%= f.label "Garyndaşlyk Derejesi : ", class: "col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8"><%= f.collection_select(:parent_type_id, @parent_types, :id, :parent_type_title, :include_blank => t("Please_select"), :class => "form-control" ) %></div>
          </div>

          <br><br><br>

          <div class="form-group">
            <%= f.label "Bellikler : ", class: "col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8"><%= f.text_area :notes, :type => "text",class: "form-control" %></div>
          </div>

          <br><br><br>

        </div>

        <div class="modal-footer">
          <%= f.submit "Kabul Et", class: "btn btn-primary" %>
          <%= link_to "Goýbolsun", "#", class: "btn btn-default", data: {dismiss: "modal"} %>
        </div>

    <% end %>

  </div>
</div>
