$("ul.errors").html("")
<% if @foreign_city.errors.any? %>
    <% @foreign_city.errors.full_messages.each do |message| %>
        $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
    <% end %>
<% else %>
    $(".foreign_city-index").html("<%= escape_javascript(render 'index') %>")
    $("#foreign_city-modal").modal("hide")
<% end %>