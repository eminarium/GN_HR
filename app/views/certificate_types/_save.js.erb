$("ul.errors").html("")
<% if @certificate_type.errors.any? %>
    <% @certificate_type.errors.full_messages.each do |message| %>
        $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
    <% end %>
<% else %>
    $(".certificate_type-index").html("<%= escape_javascript(render 'index') %>")
    $("#certificate_type-modal").modal("hide")
<% end %>