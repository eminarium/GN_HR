$("ul.errors").html("")
<% if @parent_type.errors.any? %>
    <% @parent_type.errors.full_messages.each do |message| %>
        $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
    <% end %>
<% else %>
    $(".parent_type-index").html("<%= escape_javascript(render 'index') %>")
    $("#parent_type-modal").modal("hide")
<% end %>