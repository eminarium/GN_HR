<div class="modal-dialog">
  <div class="modal-content">

    <div class="color-line"></div>

    <div class="modal-header text-center">
      <h4 class="modal-title">Modal title</h4>
      <small class="font-bold">Lorem Ipsum is simply dummy text of the printing and typesetting industry.</small>
    </div>

    <%= form_for @phone, remote: true, html: { style: "display:inline;" } do |f| %>

        <div class="modal-body">
          <ul class="errors"></ul>

          <div class="form-group">
            <%= f.label "Belgisi : ", class:"col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8">
              <div class="input-group m-b">
                <span class="input-group-addon">+993</span>
                <%= f.text_field :phone_no, :type => "text", class: "form-control" %>
              </div>
            </div>
          </div>

          <br><br><br>

          <div class="form-group">
            <%= f.label "Işgär : ", class: "col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8"><%= f.collection_select(:employee_id, @employees, :id, :first_and_last_name, :include_blank => t("Please_select"), :class => "form-control" ) %></div>
          </div>

          <br><br><br>

          <div class="form-group">
            <%= f.label "Telefon Görnüşi : ", class: "col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8"><%= f.collection_select(:phone_type_id, @phone_types, :id, :phone_type_title, :include_blank => t("Please_select"), :class => "form-control" ) %></div>
          </div>

          <br><br><br>

          <div class="form-group">
            <%= f.label "Bellikler : ", class: "col-sm-4 control-label", style: "text-align:right" %>
            <div class="col-sm-8"><%= f.text_area :notes, :type => "text",class: "form-control" %></div>
          </div>

          <br><br><br>

        </div>

        <div class="modal-footer">
          <%= f.submit "Kabul Et", class: "btn btn-primary" %>
          <%= link_to "Goýbolsun", "#", class: "btn btn-default", data: {dismiss: "modal"} %>
        </div>

    <% end %>

  </div>
</div>
