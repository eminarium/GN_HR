$("ul.errors").html("")
<% if @paid_offday.errors.any? %>
    <% @paid_offday.errors.full_messages.each do |message| %>
        $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
    <% end %>
<% else %>
    $(".paid_offday-index").html("<%= escape_javascript(render 'index') %>")
    $("#paid_offday-modal").modal("hide")
<% end %>
